<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="288dp"
        android:layout_height="175dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="48dp"
        android:scaleType="fitStart"
        android:src="@drawable/ic_launcher"/>

    <android.support.v7.widget.CardView
        android:layout_width="175dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="25dp"
        android:id="@+id/schedule"
        android:background="@drawable/ripple">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignStart="@+id/schedule">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="false"
                android:text="Schedule"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="175dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="25dp"
        android:id="@+id/classes"
        android:background="@drawable/ripple">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Classes"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                android:layout_centerInParent="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="175dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/schedule"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="25dp"
        android:id="@+id/Calender"
        android:background="@drawable/ripple">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/Calender"
            android:layout_alignStart="@+id/Calender">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_centerVertical="false"
                android:text="Calendar"
                android:textColor="#FFFFFF"
                android:textSize="25dp" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="175dp"
        android:layout_height="90dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/classes"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="25dp"
        android:id="@+id/graduation"
        android:background="@drawable/ripple">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Graduation"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                android:layout_centerInParent="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
    android:layout_width="175dp"
    android:layout_height="90dp"
    android:layout_alignParentRight="true"
    android:layout_centerVertical="true"
    android:layout_below="@id/graduation"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    app:cardBackgroundColor="@color/colorPrimary"
    app:cardCornerRadius="25dp"
    android:id="@+id/clubs"
    android:background="@drawable/ripple">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clubs"
            android:textSize="25dp"
            android:textColor="#FFFFFF"
            android:layout_centerInParent="true" />

    </RelativeLayout>
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="175dp"
        android:layout_height="90dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_below="@id/graduation"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="25dp"
        android:id="@+id/numbers"
        android:background="@drawable/ripple">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Numbers"
                android:textSize="25dp"
                android:textColor="#FFFFFF"
                android:layout_centerInParent="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/roboto"
        android:text="Hello, Cougar"
        android:textSize="32dp" />


</RelativeLayout>